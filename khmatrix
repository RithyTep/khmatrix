#!/bin/bash
# khmatrix - Khmer Matrix Rain
# A fork of cmatrix with Khmer Unicode characters

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if [ -f "$SCRIPT_DIR/khmatrix-bin" ]; then
    "$SCRIPT_DIR/khmatrix-bin" -K "$@"
elif [ -f "$HOME/.local/bin/khmatrix-bin" ]; then
    "$HOME/.local/bin/khmatrix-bin" -K "$@"
else
    echo "Error: khmatrix-bin not found"
    echo "Please run the install script or build from source"
    exit 1
fi
